<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".EnterFriend">

    <LinearLayout
        android:id="@+id/mainwindow"
        android:layout_width="410dp"
        android:layout_height="909dp"
        android:layout_gravity="center"
        android:background="#673AB7"
        android:backgroundTint="#1C8C21"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="16dp">

        <EditText
            android:id="@+id/enterFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/clickHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/white"
            android:text="Enter a Friend's Username!"
            tools:visibility="visible" />
        <Button
            android:id="@+id/Find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:outlineAmbientShadowColor="@color/black"
            android:backgroundTint="#020000"
            android:text = "Compare Your Tastes!"/>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>